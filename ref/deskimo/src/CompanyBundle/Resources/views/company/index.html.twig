{% extends '@App/authentication/admin/admin-master.html.twig' %}

{% block prefix_title %} List Company {% endblock %}

{% block extra_stylesheets %}
    {{ encore_entry_link_tags('admin_property_company_management') }}
{% endblock %}

{% block mainContent %}
    <div class="card card-ex">
        <div class="card-body">

            <div class="c-subheader justify-content-between">
                <div id="form-search">
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input type="text" class="form-control form-control-ex" style="width: 400px"
                                       data-autoclose="true" id="keyword"
                                       placeholder="Search by Company ">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="c-subheader-nav d-md-down-none">
                    <div>
                        <a class="btn btn-primary"
                           href="{{ path('property_company_management_create_route') }}">+ New Company</a>
                    </div>
                </div>
            </div>

            <div class="table-responsive">

                <table id="bundle-table" class="table align-items-center table-flush">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Contact Phone</th>
                        <th scope="col">Contact Name</th>
                        <th scope="col">Status</th>
                        <th scope="col">Updated Date</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="inviteModal" tabindex="-1" role="dialog" aria-labelledby="inviteModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="inviteModalLabel">Invite Staff</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% include '@App/authentication/admin/component/flash-message.html.twig' %}
                    {{ form_start(invite_form, {'method': 'POST', 'class': 'form-horizontal ng-pristine ng-valid'}) }}
                        <div class="form-group">
                            <label for="fullName">Full name</label>
                            {{ form_widget(invite_form.fullName, {'attr': {'class': 'form-control', 'placeholder': 'Full name'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            {{ form_widget(invite_form.username, {'attr': {'class': 'form-control', 'placeholder': 'Email address'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="role">Role</label>
                            {{ form_widget(invite_form.roleId, {'attr': {'class': 'form-control'}}) }}
                        </div>
                            {{ form_widget(invite_form.company)}}
                    {{ form_end(invite_form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary invite-submit">Invite Staff</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block extra_javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin_property_company_management') }}
{% endblock %}
