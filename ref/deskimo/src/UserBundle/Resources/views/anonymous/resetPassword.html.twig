{% extends '@App/anonymous/anonymous-master.html.twig' %}

{% block prefix_title %}Change password{% endblock %}

{% block extra_stylesheets %}
    {{ encore_entry_link_tags('loginPage') }}
{% endblock %}

{% block classBody %}
    class="app reset-password"
{% endblock %}

{% block body %}
    <div class="login">
        <div class="container container--login">
            <div class="login__inner">
                <div class="login__form">
                    <h1 class="login__title">Update password</h1>

                    {{ form_start(form) }}
                    <div class="form-group">
                        <label for="reset_password_plainPassword_first">New password<span>*</span></label>
                        {{ form_row(form.plainPassword.first, {
                            'attr':
                            {
                                'placeholder': 'Input new password',
                                'required': 'true',
                                'oninvalid': 'InvalidMsg(this);',
                                'oninput': 'InvalidMsg(this);',
                                'title': 'Please input right information'
                            }
                        }) }}
                    </div>

                    <div class="form-group">
                        <label for="reset_password_plainPassword_second">Repeat new password<span>*</span></label>
                        {{ form_row(form.plainPassword.second, {

                            'attr':
                            {
                                'placeholder': 'Input new password again',
                                'required': 'true',
                                'oninvalid': 'InvalidMsg(this);',
                                'oninput': 'InvalidMsg(this);',
                                'title': 'Please input right information'
                            }
                        }) }}
                    </div>
                    <button type="submit" class="ripple">Continue</button>

                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>

{% endblock %}

{% block extra_javascripts %}
    {{ encore_entry_script_tags('loginPage') }}
{% endblock %}
