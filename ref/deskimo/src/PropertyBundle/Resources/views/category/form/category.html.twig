{{ form_start(form, {'method': 'POST', 'class': 'form-horizontal ng-pristine ng-valid'}) }}
<div class="card card-form card-form-divide">
  <div class="card-header">{{ action }} Category</div>
  <div class="card-body">
    <div class="form-group row">
      <label class="col-md-3 col-lg-2 col-form-label control-label required" for="order_company">Name</label>
      <div class="col-md-6">
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        <div class="invalid-feedback">{{ form_errors(form.name) }}</div>
      </div>
    </div>
    <div class="contract-courses row form-group align-items-center position-relative">
      <label class="col-md-3 col-lg-2 col-form-label control-label" for="contract_courses">Description</label>
      <div class="col-md-6">
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
  </div>
</div>

{% include '@App/authentication/admin/component/actions.html.twig' with {'back_to_list_path': path('property_category_management_route')} %}
{{ form_end(form) }}