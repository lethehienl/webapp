                <div class="col-lg-6 col-12 right-side">
                    <div class="card-section price">
                        <p class="price-amount"><span
                                    class="amount">{{ data['patePerHour'] |number_format(2, '.', ',') }}</span><span
                                    class="unit">SGD / HR</span></p>
                    </div>
                    {% if data['wifi']['pass'] is defined %}
                    <div class="card-section">
                        <h2>Wifi Info</h2>
                        <p><span>Wifi name: </span>{{ data['wifi']['name'] }}</p>
