                        <div class="guide-to__list">
                            {% if data['howToGetThere']['option1'] is defined and data['howToGetThere']['option1'] != "" %}
                            <div class="guide-to__item">
                                <i class="fal fa-car"></i>
                                <div class="guide-to__content">
                                    <p class="main-text">Car drop-off point</p>
                                    <p class="sub-text">{{ data['howToGetThere']['option1'] }}</p>
                                </div>
