{% block mainContent %}
    <div class="card property-detail">
        <div class="card-header">
            <h2>Property Details</h2>
            <a href="/admin/property/{{ property.id }}/update">
                <button class="btn btn-primary">Edit</button>
            </a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 col-12 left-side">
                    <h1>{{ property.name }}</h1>
                    <h4>{{ data['country'] }} • {{ data['type'] }}</h4>
                    <div class="card-section">
                        <h2>About</h2>
                        <div class="dataAbout">
                            {{ data['about'] }}
                        </div>
                    </div>
                    <div class="card-section schedule-list">
                        <h2>Schedule</h2>
                        <div class="nav-tabs-boxed">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#home"
                                                        role="tab" aria-controls="home" aria-selected="true">
                                        <p class="main-schedule" style="font-size: 0.9rem">Open Hour</p>
                                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#profile" role="tab"
                                                        aria-controls="profile" aria-selected="false">
                                        <p class="main-schedule" style="font-size: 0.9rem">Community Team Operating Hours</p></a></li>
                                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#messages" role="tab"
                                                        aria-controls="messages" aria-selected="false">
                                        <p class="main-schedule" style="font-size: 0.9rem">Aircon Operating Hours</p></a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="home" role="tabpanel">
                                    <ul class="list-group">
                                        {% if data['schedule']['openHour'] is defined %}
                                            {% for  key, day in data['schedule']['openHour'] %}
                                                <li class="list-group-item">
                                                    {% if day['24'] is defined and day['24'] == true %}
                                                        <div class="row">
                                                            <div class="col-md-5">
                                                                <p class="main-schedule" style="font-size: 0.9rem">
                                                                    <span>{{ key | capitalize }}:</span></p>
                                                            </div>
                                                            <div class="col-md-7">
                                                                <span style="font-size: 0.9rem">Open 24 hours</span>
                                                            </div>
                                                        </div>
                                                    {% elseif(day['close'] is defined  and day['close'] == true) %}
                                                        <div class="row">
                                                            <div class="col-md-5">
                                                                <p class="main-schedule" style="font-size: 0.9rem">
                                                                    <span>{{ key | capitalize }}:</span></p>
                                                            </div>
                                                            <div class="col-md-7" >
                                                                <span style="font-size: 0.9rem">Closed</span>
                                                            </div>
                                                        </div>

                                                    {% elseif( day['openHour'] is defined and day['closeHour'] is defined) %}
                                                        <div class="row">
                                                            <div class="col-md-5">
                                                                <p class="main-schedule" style="font-size: 0.9rem">
                                                                    <span>{{ key | capitalize }}:</span></p>
                                                            </div>
                                                            <div class="col-md-7">
                                                                <span style="font-size: 0.9rem">{{ day['openHour'] }} - {{ day['closeHour'] }}</span>
                                                            </div>
                                                        </div>
                                                    {% endif %}

                                                </li>
                                            {% endfor %}
                                        {% endif %}
                                    </ul>
                                </div>
                                <div class="tab-pane" id="profile" role="tabpanel">
                                    <ul class="list-group">
                                        {% if data['schedule']['community'] is defined %}
                                            {% for  key, day in data['schedule']['community'] %}
                                                <li class="list-group-item">
                                                    {% if day['24'] is defined and day['24'] == true %}
                                                        <div class="row">
                                                            <div class="col-md-5">
                                                                <p class="main-schedule"><span>{{ key | capitalize }}:</span>
                                                                </p>
                                                            </div>
                                                            <div class="col-md-7">
                                                                <span>Open 24 hours</span>
                                                            </div>
                                                        </div>
                                                    {% elseif(day['close'] is defined  and day['close'] == true) %}
                                                        <div class="row">
                                                            <div class="col-md-5">
                                                                <p class="main-schedule"><span>{{ key | capitalize }}:</span>
                                                                </p>
                                                            </div>
                                                            <div class="col-md-7">
                                                                <span>Closed</span>
                                                            </div>
                                                        </div>

                                                    {% elseif( day['openHour'] is defined and day['closeHour'] is defined) %}
                                                        <div class="row">
                                                            <div class="col-md-5">
                                                                <p class="main-schedule"><span>{{ key | capitalize }}:</span>
                                                                </p>
                                                            </div>
                                                            <div class="col-md-7">
                                                                <span>{{ day['openHour'] }} - {{ day['closeHour'] }}</span>
                                                            </div>
                                                        </div>
                                                    {% endif %}

                                                </li>
                                            {% endfor %}
                                        {% endif %}
                                    </ul>
                                </div>
                                <div class="tab-pane" id="messages" role="tabpanel">
                                    <ul class="list-group">
                                        {% if data['schedule']['aircon'] is defined %}
                                            {% for  key, day in data['schedule']['aircon'] %}
                                                <li class="list-group-item">
