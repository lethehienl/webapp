            <div>
              <a class="btn btn-primary" href="{{ path('property_management_create_route') }}">+ New Property</a>
            </div>
          </div>
        {% endif %}
      </div>

      <div class="table-responsive">
        <table id="bundle-table" class="table align-items-center table-flush">
          <thead class="thead-light d-none">
          <tr>
          </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>

{% endblock %}

