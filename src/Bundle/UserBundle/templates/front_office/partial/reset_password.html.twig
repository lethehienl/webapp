<style>
    #loginPage {
        margin-bottom: -80px;
        background: url(/bundles/html/thanhhuong/imgs/bannerbg3.jpg) no-repeat center;
        /*background: url(/bundles/html/thanhhuong/imgs/banner4.jpg) no-repeat center;*/
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
    .loginPageInner{
        padding-bottom: 50px;
        text-align: center;
        max-width: 604px;
        margin: 0 auto;
        /*        background-color: #C4A484 ;*/
        background-color: #223b05 ;
        color: #ffffff;

    }
    .loginPageInner form {
        padding: 25px 80px 0px;
    }
    .loginPageInner form .form-group {
        text-align: left;
    }
    .loginPageInner form .form-group label {
        padding-top: 3px;
    }

    .loginPageInner .btn-primary {
        background-color: #223b05;
        color: #ffffff;
        border-radius: 4px;
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        line-height: 25px;
    }
	.alert {
		margin-left: 80px;
		margin-right: 80px;
		padding-top: 5px;
		padding-bottom: 5px;
		margin-top: 14px;
	}
</style>
<div id="loginPage">
	<div class="container">

		<div class="row">
			<div class="col-12">
				<div class="loginPageInner">
					<div class="logo pt-5 pb-5">
						<div class="row">
							<div class="col-12">
								<img class="logo" width="300px"  src="/bundles/html/thanhhuong/imgs/logo.png">
							</div>
						</div>
					</div>

					<div class="login-container">

						<h1>Reset Your Password</h1>
						{% for message in app.flashes('success') %}
							<div class="alert alert-success">{{ message }}</div>
						{% endfor %}
						<form method="post">
							<input type="hidden" name="token" value="{{ token }}">
							<div class="mb-3">
								<label for="password" class="form-label">New Password:</label>
								<input type="password" class="form-control" id="password" name="password" required>
							</div>
							<button type="submit" class="btn btn-success">Reset Password</button>
						</form>


					</div>
				</div>
			</div>
		</div>
	</div>
</div>